<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">
    <h:head>
        <title>Pregled aerodroma</title>
    </h:head>
    <h:body>
        <h2>Pregled aerodroma</h2>
        <h:form>
            <h:outputLabel>Datum od:</h:outputLabel>&nbsp;
            <p:inputText id="odDatum" value="#{pregledAerodroma.odDatum}" >               
            </p:inputText>&nbsp;           
            <h:outputLabel>Datum do:</h:outputLabel>&nbsp;
            <p:inputText id="doDatum" value="#{pregledAerodroma.doDatum}" >               
            </p:inputText>&nbsp;            
            <p:dataTable value="#{pregledAerodroma.dajAerodromeKorisnika()}" var="a" rows="8" paginator="true"
                         paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
                         rowsPerPageTemplate="5,10,50,100">
                <p:column>
                    <f:facet name="header">ICAO</f:facet>#{a.icao}
                </p:column>
                <p:column>
                    <f:facet name="header">Naziv</f:facet>#{a.naziv}
                </p:column>
                <p:column>
                    <f:facet name="header">Drzava</f:facet>#{a.drzava}
                </p:column>
                <p:column>
                    <p:commandButton value="Preuzmi avione" action="#{pregledAerodroma.pokreniPregledAerodroma(a.icao)}"/>
                    <p:commandButton value="Preuzmi GPS i meteo" action="#{pregledAerodroma.dohvatiMeteoiGeoPodatke(a.icao)}"/>
                </p:column>                
            </p:dataTable>
            <h:panelGrid columns="1">
                <h:outputLabel>GPS BP š #{pregledAerodroma.aerodrom.lokacija.latitude} GPS BP d #{pregledAerodroma.aerodrom.lokacija.longitude}</h:outputLabel>&nbsp;
                <h:outputLabel>GPS NA š #{pregledAerodroma.lokacija.latitude} GPS NA d #{pregledAerodroma.lokacija.latitude}</h:outputLabel>&nbsp;
                <h:outputLabel>Temp: #{pregledAerodroma.temperatura}</h:outputLabel>&nbsp;
                <h:outputLabel>Vlaga: #{pregledAerodroma.vlaga}</h:outputLabel>&nbsp;
            </h:panelGrid>
        </h:form>
    </h:body>
</html>

