<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">
    <h:head>
        <title>Pregled aerodroma</title>
    </h:head>
    <h:body>
        <h2>Pregled aerodroma</h2>
        <h:form>
            <h:outputLabel>Naziv:</h:outputLabel>&nbsp;
            <p:inputText id="naziv" value="#{dodavanjeAerodroma.naziv}" ></p:inputText>&nbsp;
            <h:commandButton value="Trazi po nazivu" action="#{dodavanjeAerodroma.dajAerodromeDrzavaNaziv()}"/><br/>
            <h:outputLabel>Drzava:</h:outputLabel>&nbsp;
            <h:inputText value="#{dodavanjeAerodroma.drzava}"/>&nbsp;
            <h:commandButton value="Trazi po drzavi" action="#{dodavanjeAerodroma.dajAerodromeDrzavaNaziv()}"/><br/>
            <p:dataTable value="#{dodavanjeAerodroma.aerodromi}" var="a" rows="7" paginator="true"
                         paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
                         rowsPerPageTemplate="5,10,50,100">
                <p:column>
                    <f:facet name="header">ICAO</f:facet>#{a.icao}
                </p:column>
                <p:column>
                    <f:facet name="header">Naziv</f:facet>#{a.naziv}
                </p:column>
                <p:column>
                    <f:facet name="header">Drzava</f:facet>#{a.drzava}
                </p:column>
                <p:column>
                    <p:commandButton value="Dodaj aerodrom" action="#{dodavanjeAerodroma.dodajAerodromKorisniku(a.icao)}"/>
                </p:column>
            </p:dataTable>
            <h:panelGrid columns="1">
                <h:selectOneListbox>
                    <f:selectItems value="#{dodavanjeAerodroma.aerodromiKorisnika}" var="a" itemLabel="#{a.icao}" itemValue="{#{a.icao}"/>
                </h:selectOneListbox>
            </h:panelGrid>
        </h:form>
    </h:body>
</html>

